<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
        >

	<LinearLayout
            android:id="@+id/toobal"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="0dp"
            android:background="@drawable/fondo_toolbar"
            android:baselineAligned="false" >

            <Button
                android:id="@+id/cierra"
                android:background="@drawable/boton_menu_cancel_estados"
                android:layout_height="40dp" 
                android:layout_width="40dp"/>
            
		      
		    <TextView
		        android:id="@android:id/empty"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="2dp"
		        android:text="@string/listaSesionesLbl"
		        android:textColor="#fba824"
		        android:textSize="30dp"
		        android:textStyle="bold"
		        android:layout_weight="1" 
		        android:gravity="center" />
		    
		     <ImageButton
		         android:id="@+id/swipenext"
		         android:layout_width="35dp"
		         android:layout_height="35dp"
		         android:background="@drawable/boton_menu_follow_estados"
		         android:text="" 
		         android:scaleType="centerInside" />
    			
    	</LinearLayout>
        
    


<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:id="@+id/pantallasegistra"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >  

	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/screentabla"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <LinearLayout 
	        android:id="@+id/puntosesionCabecera"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	       >
	    
		     <LinearLayout 
		        android:id="@+id/listasesionesrow"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:gravity="center">
	
		        <TextView
		            android:id="@+id/puntoSesionDiaSem"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="lun" 
		            android:textColor="#fba824"/>
		        
		        <TextView
		            android:id="@+id/puntoSesionDiaNum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="15"
		            android:textColor="#fba824" />
		        
		        <TextView
		            android:id="@+id/puntoSesionDiaMes"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="feb"
		            android:textColor="#fba824" />
		        
		    </LinearLayout>   
	    
	        
		    <LinearLayout 
		        android:id="@+id/listasesionesrow"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:padding="2sp"
		        android:layout_weight="1" android:layout_marginLeft="10sp">        
					            
		            
		             <TextView
			            android:id="@+id/puntoSesionDistancia"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textSize="25sp"
			            android:text="10.2" 
			            android:layout_marginBottom="-8sp" 
			            android:layout_marginLeft="0sp"
			            android:textColor="#fba824"/>
		             
		             <TextView
				            android:id="@+id/displayDistanciaLbl"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/displayDistanciaLbl" 
				            android:textSize="10sp"  
				            android:layout_marginLeft="1sp"
				            android:textColor="#fba824"/>
		 	</LinearLayout>   
 	
           
	      <LinearLayout 
	        android:id="@+id/listasesionesrow"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:padding="2sp"
	        android:layout_weight="1"  >           
	            
	             
	        	<TextView
		            android:id="@+id/puntoSesionDuracion"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="25sp"
		            android:text="1:12" 
		            android:layout_marginBottom="-8sp" 
		            android:layout_marginLeft="0sp" 
		            android:textColor="#fba824"/>
	        	
	        	<TextView
			        android:id="@+id/displayTiempoLbl"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="10sp"
			        android:text="@string/displayTiempoLbl" 
			        android:layout_marginLeft="1sp"
			        android:textColor="#fba824"/> 
	        	
	        </LinearLayout>   	
        	
		        
	        <LinearLayout 
	        android:id="@+id/listasesionesrow"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:padding="2sp" 
	        android:layout_weight="1" >   	
        	
        	
	        	<TextView
		            android:id="@+id/puntoSesionVelocidad"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="25sp"
		            android:text="5:25" 
		            android:layout_marginLeft="0sp" 
		            android:layout_marginBottom="-8sp"
		            android:textColor="#fba824"/>
	        	
	        	<TextView
					android:id="@+id/displayVelocidadLblMms"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/displayVelocidadLblMms" 
					android:textSize="10sp" 
					android:layout_marginLeft="1sp"
					android:textColor="#fba824"/>
        	
        	</LinearLayout>  
	    
	            
		        
	        <LinearLayout 
	        android:id="@+id/listasesionesrow"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:padding="2sp" 
	        android:layout_weight="1" >   	
        	
        	
	        	<TextView
		            android:id="@+id/puntoSesionDesnivelPos"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="+345" 
		            android:layout_marginLeft="0sp" 
		            android:layout_marginBottom="0sp"
		            
	            	android:textColor="#fba824" />
	        	
	        	<TextView
		            android:id="@+id/puntoSesionDesnivelNeg"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="20sp"
		            android:text="-345" 
		            android:layout_marginLeft="0sp" 
		            android:layout_marginBottom="-5sp"
		            
	            	android:textColor="#fba824" />
	        	
	        	
	        	<TextView
					android:id="@+id/displaydesnivelLbl"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/altAcumLbl" 
					android:textSize="10sp" 
					android:layout_marginLeft="1sp"
					android:textColor="#fba824" />
        	
        	</LinearLayout>  
	
	            
	    </LinearLayout> 
	
	    <EditText
			android:id="@+id/descPuntosSesion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:hint="@string/noDesc"
			android:textColor="#fba824" android:paddingLeft="40sp" android:background="#000000"/>

	    
	     <TableLayout 
		        android:id="@+id/tablaPuntosSesionCabecera"
		        android:layout_height="wrap_content" 
		        android:layout_width="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center_horizontal">
	
		    </TableLayout>
	    
	    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
	     android:scrollbars="vertical" 
	     android:layout_height="fill_parent" 
	     android:layout_width="wrap_content"
	     android:id="@+id/tablaPuntosScroll" android:layout_gravity="center_horizontal">
	    
	    
		    <TableLayout 
		        android:id="@+id/tablaPuntosSesion"
		        android:layout_height="fill_parent" 
		        android:layout_width="wrap_content" 
		        xmlns:android="http://schemas.android.com/apk/res/android">
	
		    </TableLayout>
		</ScrollView>
	</LinearLayout>
	
	<RelativeLayout 
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:id="@+id/screenMapa"
		  android:layout_width="fill_parent"
		  android:layout_height="fill_parent">
	    
	    
	    
	  
		<org.osmdroid.views.MapView 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="fill_parent" 
	    	android:enabled="true"
	    	android:clickable="true"
	    	android:id="@+id/mapaSesion"
	    	android:layout_weight="1"  >
  
		</org.osmdroid.views.MapView> 
		  
		<LinearLayout
		    android:id="@+id/botonesKm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:scaleType="fitXY"
    		android:layout_alignBottom="@id/mapaSesion"
			android:layout_margin="10sp">
		    
		    
		     <Button
		        android:id="@+id/anteriorKm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="" 
		        android:background="@drawable/ic_km_anterior_estados"/>
			    
		    <TextView
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:id="@+id/displaydesnivelLbl"
				android:text="@string/parcial" 
				android:textSize="15sp" 
				android:background="#ffffff"
				android:padding="2dp"/>
			    
			<Button
		    	android:id="@+id/siguienteKm"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text=""
		        android:background="@drawable/ic_km_siguiente_estados" />
		    
		</LinearLayout>    
		    
		
	
	
	</RelativeLayout>
	
</ViewFlipper>

</LinearLayout>